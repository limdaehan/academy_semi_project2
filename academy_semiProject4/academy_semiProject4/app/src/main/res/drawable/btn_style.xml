<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/deepBlue">

    <!-- 평상시 -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">


            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="@color/colorPrimary" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="2.5dp"
                android:color="@color/none" />
        </shape>

    </item>
