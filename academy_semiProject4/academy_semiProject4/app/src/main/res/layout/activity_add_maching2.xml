<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMatchingActivity2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="103dp"
            android:layout_height="45dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="245dp"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="86dp"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp"
            android:fontFamily="@font/stencil"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="매칭 등록"
            android:textSize="30sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:id="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="66dp"
            android:layout_height="42dp"
            android:fontFamily="@font/locus_sangsang"
            android:text="제목"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/locus_sangsang"
            android:inputType="textPersonName"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="세입종류"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/addSaleSpiner3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="가격"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/addSaleSpiner4"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_weight="1">

            </Spinner>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="방 종류"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/addRoomTypeSpinner"
                android:layout_width="120sp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="평수"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/addRoomSpinner"
                android:layout_width="120sp"
                android:layout_height="match_parent"
                />



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matchTIme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="성별"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/matchGenderSpinner"
                android:layout_width="120sp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.248"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matchPersonality"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="5sp"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="성격"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/matchPersonalitySpinner"
                android:layout_width="120sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.248"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:fontFamily="@font/locus_sangsang"
            android:padding="5sp"
            android:text="소개글"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="인원수 "
            android:textSize="24sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/matchPersonSize"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:gravity="center|right|center_vertical" />

    </LinearLayout>

    <EditText
        android:id="@+id/contentTextLine"
        android:layout_width="378dp"
        android:layout_height="136dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10sp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/addSaleListButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="135dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/stencil"
        android:gravity="center"
        android:text="등록하기"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimary" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/mainlinearlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="1dp"
        app:itemBackground="@color/colorPrimary">


        <!--  <Button
              android:id="@+id/homeBtn"
              android:layout_width="wrap_content"
              android:layout_height="60dp"
              android:layout_weight="1"
              android:background="@drawable/btn_style"
              android:text="home"
              android:textColor="@color/color1"/>

          <Button
              android:id="@+id/searchBtn"
              android:layout_width="wrap_content"
              android:layout_height="60dp"
              android:layout_weight="1"
              android:background="@drawable/btn_style"
              android:text="search"
              android:textColor="@color/color1"/>

          <Button
              android:id="@+id/meBtn"
              android:layout_width="wrap_content"
              android:layout_height="60dp"
              android:layout_weight="1"
              android:background="@drawable/btn_style"
              android:text="about me"
              android:textColor="@color/color1"/>-->
    </LinearLayout>


</LinearLayout>