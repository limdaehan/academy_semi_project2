<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:foregroundGravity="center"
            android:src="@drawable/logo" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:text="버튼 위치잡으려고 그냥 넣어둔것 안보이게 할거임"
            android:textColor="@color/none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/findHouseBtn"
                android:layout_width="wrap_content"
                android:layout_height="162dp"
                android:layout_margin="10dp"
                android:src="@drawable/findhouse" />

            <ImageButton
                android:id="@+id/findFriendBtn"
                android:layout_width="wrap_content"
                android:layout_height="164dp"
                android:layout_margin="10dp"
                android:width="5dp"
                android:color="#90CAF9"
                android:src="@drawable/findfriends" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/addhouseBtn"
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="80dp"
            app:srcCompat="@drawable/addhouse2" />

        <LinearLayout
            android:id="@+id/mainlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:itemBackground="@color/colorPrimary">


            <!--  <Button
                  android:id="@+id/homeBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="60dp"
                  android:layout_weight="1"
                  android:background="@drawable/btn_style"
                  android:text="home"
                  android:textColor="@color/color1" />

              <Button
                  android:id="@+id/searchBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="60dp"
                  android:layout_weight="1"
                  android:background="@drawable/btn_style"
                  android:text="search"
                  android:textColor="@color/color1" />

              <Button
                  android:id="@+id/meBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="60dp"
                  android:layout_weight="1"
                  android:background="@drawable/btn_style"
                  android:text="about me"
                  android:textColor="@color/color1" />-->
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
